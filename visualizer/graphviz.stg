graph(name, nodes, edges) ::= <<digraph <name> {
    rankdir = LR;

    // all nodes
    <if(nodes)><nodes:node()><endif>

    // all edges
    <if(edges)><edges:edge()><endif>
}>>
 
node(n) ::= "\"<n.name>\" [shape=\"<n.shape>\" color=\"<n.color>\" label=\"<n.name>\"];<\n>"
edge(e) ::= "\"<e.origin.name>\" -> \"<e.destination.name>\" [label=\"<e.label>\"];<\n>"
